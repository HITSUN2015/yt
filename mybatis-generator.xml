<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >

    <!-- 这里就是 项目已提供mysql-connector-java-5.1.34.jar（网上可以下载别的版本） 放在硬盘上 路径写到这里-->
    <classPathEntry location="F:\repository\mysql\mysql-connector-java\5.1.34\mysql-connector-java-5.1.34.jar" />

    <context id="MySQLTables" targetRuntime="MyBatis3">

        <property name="autoDelimitKeywords" value="true"/>
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL=""
                        userId=""
                        password="">
        </jdbcConnection>

        <javaTypeResolver >
            <property name="forceBigDecimals" value="false" />
        </javaTypeResolver>

        <!-- 生成vo对象 -->
        <javaModelGenerator targetPackage="com.ezviz.******.domain" targetProject="src\main\java">
            <property name="enableSubPackages" value="true" />
            <property name="trimStrings" value="true" />
        </javaModelGenerator>

        <!-- 生成映射文件的包名和位置-->
        <sqlMapGenerator targetPackage="sqlmap" targetProject="src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 采用ANNOTATEDMAPPER这种类型的Client，是不需要生成SQLMap文件的，这样比较方便一些;
             采用XMLMAPPER这种类型的Client，需要生成SQLMap文件的,但是定制比较方便一些-->
        <javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="com.ezviz.******.dao" targetProject="src\main\java"> <!--\src\main\java">-->
            <property name="enableSubPackages" value="true" />
        </javaClientGenerator>

        <table schema="" tableName="order" domainObjectName="OrderDO" />
    </context>
</generatorConfiguration>
